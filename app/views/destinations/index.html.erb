<% @destinations.each do |destination| %>
      <h2><%=destination.user.name %>さんの<%= destination.month %>月の運行記録</h2><br />
      長距離運行
        <%= destination.long_distance %>回<br />
      中距離運行
      <%= destination.middle_distance %>回<br />
      短距離運行
       <%= destination.middle_distance %>回<br />

<br /><br />

    <div class="graph">
     <%=destination.user.name %>さんの運行先割合グラフ
     <%= pie_chart [['長距離運行', destination.long_distance], ['中距離運行', destination.middle_distance],['短距離運行', destination.middle_distance]]%>
     
    </div>

  <%= destination.long_distance %>
<% end %>